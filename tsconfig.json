{
	"compilerOptions": {
		"outDir": "./dist/",
		"lib": ["ESNext"],
		"module": "ESNext",
		"moduleDetection": "force",
		"moduleResolution": "Bundler",
		"target": "ES2015",
        "declaration": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "src/**/*.test.ts"]
}
 