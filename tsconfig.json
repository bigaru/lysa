{
	"compilerOptions": {
		"outDir": "./dist/",
		"module": "Node16",
		"moduleResolution": "Node16",
		"target": "ES2020",
        "declaration": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
 