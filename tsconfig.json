{
    "compilerOptions": {
        // Enable latest features
        "lib": ["ESNext", "DOM"],
        "target": "ESNext",
        "moduleDetection": "force",
        "allowJs": true,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,

        // Best practices
        "strict": true,
        "skipLibCheck": true,
        "noFallthroughCasesInSwitch": true,

        // Some stricter flags
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noPropertyAccessFromIndexSignature": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "spec", "dist", "perf"]
}
